@model Restaurant

<section class="panel panel-default">
    <h3 class="panel-heading">@Model.Name</h3>
    <div class="panel-body">
        Cuisine: @Model.Cuisine
    </div>
    <div class="panel-footer">
        <a class="btn btn-primary" asp-action="@nameof(HomeController.Details)" asp-route-id="@Model.Id">Details</a>
        <a class="btn btn-primary" asp-action="@nameof(HomeController.Edit)" asp-route-id="@Model.Id">Edit</a>
    </div>
</section>