@model Restaurant

@{
    ViewBag.Title = $"{nameof(HomeController.Edit)} {Model.Name}";
}

<form class="form-horizontal" method="post" asp-antiforgery="true">
    <fieldset>
        <legend>Editining: @Model.Name</legend>
        <div class="form-group">
            <label asp-for="Name" class="col-sm-2 control-label"></label>
            <div class="col-sm-6">
                <input asp-for="Name" class="form-control">
            </div>
            <span asp-validation-for="@Model.Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cuisine" class="col-sm-2 control-label"></label>
            <div class="col-sm-6">
                <select asp-for="@Model.Cuisine" asp-items="@Html.GetEnumSelectList(typeof(CuisineType))" class="form-control"></select>
            </div>
            <span asp-validation-for="@Model.Cuisine"></span>
        </div>
        <div class="form-group">
            <div class="col-sm-6 col-sm-offset-2">
                <button type="submit" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </fieldset>
</form>

<div>
    <a asp-action="@nameof(HomeController.Index)">Back to home</a>
</div>
